 ============================================================================================================
*/

$DB->free($_Application_Module_Administration_Applications_DB_Query_Update_Application_ID);

} // [ + ] IF: Internal Application: Update :: Application Module

} // [ + ] IF: Database Server Query :: Update :: Application Database Entry


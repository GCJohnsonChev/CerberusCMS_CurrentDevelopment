$_Application_Module_Administration_Robot_Monitor_DB_Query_SELECT_MEMBERS			= $DB->query("SELECT * FROM {$_ACCESS_DATABASE_SERVER_DATABASE_TABLE_PREFIX}_members WHERE member_status_account_activation='0' ORDER BY id DESC");

echo ("
													<CENTER><B>Spam-Bot Monitor</B></CENTER><HR>

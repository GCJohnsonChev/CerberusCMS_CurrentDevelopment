} // [ + ] IF: Delete All Non-Activated Member Accounts Database Server Query Is Executed

/*
 ============================================================================================================
 + Kill SQL Database Server Query: Delete All Non-Activated Member Accounts
 ============================================================================================================
*/

$DB->free($_Application_Module_Administration_Robot_Monitor_DB_Query_DELETE_ALL);

} // [ + ] IF: Internal Application: Delete All Non-Activated Member Accounts Is Activated

													echo ("<BR><BR>[ <A HREF=\"?$_INTERNAL_APPLICATION_MODULE_ADMINISTRATOR&#61;Control_Panel&amp;Action&#61;Robot_Monitor&amp;DeleteID&#61;All\" TITLE=\":: Delete All Potential Automated and Malicious Non-Activated Member Accounts ::\">Delete All</A> ]<BR>");


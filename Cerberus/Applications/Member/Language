 ============================================================================================================
 +
 +
 + [ ^ ] Application Module :: Member :: Language
 +
 +
 ============================================================================================================
*/

/*
 ============================================================================================================
 + Application Module Header
 ============================================================================================================
*/

											echo ($_Application_Module_Member_Message_Language_Header);

/*
 ============================================================================================================
 + Retrieve Language Files
 ============================================================================================================
*/

$_Application_Module_Language_SPECIFY_LANGUAGE_DIRECTORY			= "System/Language/";
$_Application_Module_Language_OPEN_LANGUAGE_DIRECTORY				= opendir($_Application_Module_Language_SPECIFY_LANGUAGE_DIRECTORY);

/*
 ============================================================================================================
 + List All Language Files
 ============================================================================================================
*/

echo ("
												<FORM ACTION=\"?InternalApplication&#61;Language\" METHOD=\"post\">
													<SELECT NAME=\"AM_Specify_Language\">
");

while (($_Application_Module_Language_READ_LANGUAGE_DIRECTORY = readdir($_Application_Module_Language_OPEN_LANGUAGE_DIRECTORY))) {

if ($_Application_Module_Language_READ_LANGUAGE_DIRECTORY == "." || $_Application_Module_Language_READ_LANGUAGE_DIRECTORY == ".." || $_Application_Module_Language_READ_LANGUAGE_DIRECTORY == "index.php") {
/**
 * Do Nothing
**/
} else {
											echo ("<OPTION VALUE=\"$_Application_Module_Language_READ_LANGUAGE_DIRECTORY\">$_Application_Module_Language_READ_LANGUAGE_DIRECTORY</OPTION>");

} // [ + ] IF: Specified Language Directory AND Files ARE NOT Specified Language Directory AND Files

} // [ + ] WHILE: Reading Specified Language Directory AND Files

/*
 ============================================================================================================
 + Set Specified Language
 ============================================================================================================
*/
											echo ("</SELECT><BR><INPUT TYPE=\"submit\" VALUE=\"Set Language\"></FORM>");

/*
 ============================================================================================================
 + Close Language Directory
 ============================================================================================================
*/

closedir($_Application_Module_Language_OPEN_LANGUAGE_DIRECTORY);
?>
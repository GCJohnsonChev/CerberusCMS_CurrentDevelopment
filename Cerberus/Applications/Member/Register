/*
 ============================================================================================================
 + Internal Security => String Santization :: Member Account Registration Form :: Post Variables :: Replace Characters
 ============================================================================================================
*/

// First Name

$_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME				= str_replace(".", "", $_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME);
$_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME				= str_replace("`", "", $_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME);

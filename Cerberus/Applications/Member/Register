// Last Name
$_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME				= str_replace(".", "", $_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME);
$_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME				= str_replace("`", "", $_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME);
$_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME				= stripslashes($_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME);

// Electronic Mail Address

$_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS		= str_replace("`", "", $_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS);
$_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS		= stripslashes($_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS);

// UserName

$_Application_Module_Member_Register_POST_REGISTRAR_USERNAME				= str_replace(".", "", $_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);
$_Application_Module_Member_Register_POST_REGISTRAR_USERNAME				= str_replace("`", "", $_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);
$_Application_Module_Member_Register_POST_REGISTRAR_USERNAME				= stripslashes($_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);

/*
 ============================================================================================================
 + Internal Security => Member Account Registration Form :: String Counting :: Post Variables
 ============================================================================================================
*/

$_Application_Module_Member_Register_GET_STRING_LENGTH_REGISTRAR_USERNAME		= strlen($_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);

/*
 ============================================================================================================
 + Internal Security => Convert :: Registration Strings To LowerCase Or UpperCase Characters
 ============================================================================================================
*/

// Electronic Mail Address

$_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS		= strtolower($_Application_Module_Member_Register_POST_REGISTRAR_ELECTRONIC_MAIL_ADDRESS);

// First Name

$_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME				= strtolower($_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME);
$_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME				= ucfirst($_Application_Module_Member_Register_POST_REGISTRAR_FIRST_NAME);

// Last Name

$_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME				= strtolower($_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME);
$_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME				= ucfirst($_Application_Module_Member_Register_POST_REGISTRAR_LAST_NAME);

// UserName

$_Application_Module_Member_Register_POST_REGISTRAR_USERNAME				= strtolower($_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);
$_Application_Module_Member_Register_POST_REGISTRAR_USERNAME				= ucfirst($_Application_Module_Member_Register_POST_REGISTRAR_USERNAME);


/*
 ============================================================================================================
 + Member Account Registration Form :: Variables :: Random Password Generation
 ============================================================================================================
*/

$_Application_Module_Member_Register_RANDOM_DIGITS 					= rand(1, 9999999999);
$_Application_Module_Member_Register_POST_REGISTRAR_PASSWORD_HASHED			= password_hash($_Application_Module_Member_Register_RANDOM_DIGITS, PASSWORD_BCRYPT);


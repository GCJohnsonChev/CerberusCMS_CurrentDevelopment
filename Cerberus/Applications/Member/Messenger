// Enter the name to creating zipped directory
//$zipcreated = "./Temporary/Messenger/Text-File/Clear-Text/Visible/$_Application_Module_Member_Messenger_POST_ARCHIVE_VISIBLE_CLEAR_TEXT_FILE_MESSENGER_ROOM_NAME/Files/Archive/$_Application_Module_Member_Messenger_POST_ARCHIVE_VISIBLE_CLEAR_TEXT_FILE_MESSENGER_ROOM_NAME - $_Application_Module_Member_Messenger_RANDOM_NUMBER_GENERATOR_1_HASH_MD5_1.zip";
$zipcreated = "$_Application_Module_Member_Messenger_POST_ARCHIVE_VISIBLE_CLEAR_TEXT_FILE_MESSENGER_ROOM_NAME - $_Application_Module_Member_Messenger_RANDOM_NUMBER_GENERATOR_1_HASH_MD5_1.zip";

// Create new zip class
$zip = new ZipArchive;
   
if ($zip->open($zipcreated, ZipArchive::CREATE ) === TRUE) {
      
    // Store the path into the variable
    $dir = opendir($pathdir);
       
    while ($file = readdir($dir)) {
        if(is_file($pathdir.$file)) {
            $zip -> addFile($pathdir.$file, $file);
        }
    }
    $zip ->close();
}


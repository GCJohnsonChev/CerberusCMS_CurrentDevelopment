 + Move Files To Temporary Directory
 ============================================================================================================
*/

											echo ("* Uploading Video File...<BR>");

move_uploaded_file($_FILES['AM_Messenger_Plain_Text_File_Messenger_Room_Name_File_Upload_Video']['tmp_name'], $_Application_Module_Messenger_UPLOAD_FILE_VIDEO_PLAIN_TEXT_FILE_MESSENGER_ROOM_NAME_SPECIFY_FILE_NAME);

											echo ("* Done...<BR>");

											echo ("* Copying Video File To File Type Directory Within Messenger Room:<BR>");

											echo ("* Copying Video File From Location: ./Temporary/Upload/$_Application_Module_Messenger_UPLOAD_FILE_VIDEO_PLAIN_TEXT_FILE_MESSENGER_ROOM_NAME_SPECIFY_UPLOAD_FILE_BASENAME To Location: ./Temporary/Messenger/Physical/Plain-Text/$_Application_Module_Messenger_POST_PLAIN_TEXT_FILE_MESSENGER_MESSAGE_ROOM_NAME_HIDDEN/Files/Video/$_Application_Module_Messenger_UPLOAD_FILE_VIDEO_PLAIN_TEXT_FILE_MESSENGER_ROOM_NAME_SPECIFY_UPLOAD_FILE_BASENAME<BR><BR>");

copy("./Temporary/Upload/$_Application_Module_Messenger_UPLOAD_FILE_VIDEO_PLAIN_TEXT_FILE_MESSENGER_ROOM_NAME_SPECIFY_UPLOAD_FILE_BASENAME","./Temporary/Messenger/Physical/Plain-Text/$_Application_Module_Messenger_POST_PLAIN_TEXT_FILE_MESSENGER_MESSAGE_ROOM_NAME_HIDDEN/Files/Video/$_Application_Module_Messenger_UPLOAD_FILE_VIDEO_PLAIN_TEXT_FILE_MESSENGER_ROOM_NAME_SPECIFY_UPLOAD_FILE_BASENAME");

											echo ("* Redirecting To Messenger Room...<BR>");

	header("location: ./$_INTERNAL_FILE_KERNEL?$_INTERNAL_APPLICATION_MODULE_MEMBER=Messenger&SelectedPlainTextFileMessengerRoom=$_Application_Module_Messenger_POST_PLAIN_TEXT_FILE_MESSENGER_MESSAGE_ROOM_NAME_HIDDEN");

} // [ + ] IF: Internal Application: Upload File :: Video :: Is Activated

